<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/green_app"
    tools:context=".ui.Desafios">
    <Button
        android:id="@+id/btn_regresar_desafios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regresar"
        android:backgroundTint="@color/beige_app"
        android:textSize="17sp"
        android:drawableLeft="@drawable/ic_regresar"
        android:textColor="@color/green_app"
        android:layout_gravity="start"
        android:padding="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        />
    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/ic_logo_app"
        android:scaleType="centerInside"
        android:layout_gravity="center"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mis Desafíos"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:layout_gravity="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Completando estos desafíos puedes obtener puntos y algunos logros."
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/beige_app" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/btn_desafio_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DESAFíO 1"
                android:textSize="27sp"
                android:paddingVertical="15dp"
                android:drawableRight="@drawable/desafio1"
                android:backgroundTint="@color/beige_app"
                android:textColor="@color/green_app"
                android:drawableTint="@color/green_app"
                android:layout_marginTop="20dp"/>
            <Button
                android:id="@+id/btn_desafio_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DESAFíO 2"
                android:textSize="27sp"
                android:paddingVertical="15dp"
                android:drawableRight="@drawable/desafio2"
                android:backgroundTint="@color/beige_app"
                android:textColor="@color/green_app"
                android:drawableTint="@color/green_app"
                android:layout_marginTop="20dp"/>
            <Button
                android:id="@+id/btn_desafio_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DESAFíO 3"
                android:textSize="27sp"
                android:paddingVertical="15dp"
                android:drawableRight="@drawable/desafio3"
                android:backgroundTint="@color/beige_app"
                android:textColor="@color/green_app"
                android:drawableTint="@color/green_app"
                android:layout_marginTop="20dp"/>
            <Button
                android:id="@+id/btn_desafio_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DESAFíO 4"
                android:textSize="27sp"
                android:paddingVertical="15dp"
                android:drawableRight="@drawable/desafio4"
                android:backgroundTint="@color/beige_app"
                android:textColor="@color/green_app"
                android:drawableTint="@color/green_app"
                android:layout_marginTop="20dp"/>
            <Button
                android:id="@+id/btn_desafio_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DESAFíO 5"
                android:textSize="27sp"
                android:paddingVertical="15dp"
                android:drawableRight="@drawable/desafio5"
                android:backgroundTint="@color/beige_app"
                android:textColor="@color/green_app"
                android:drawableTint="@color/green_app"
                android:layout_marginTop="20dp"/>
            <Button
                android:id="@+id/btn_desafio_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DESAFíO 6"
                android:textSize="27sp"
                android:paddingVertical="15dp"
                android:drawableRight="@drawable/desafio6"
                android:backgroundTint="@color/beige_app"
                android:textColor="@color/green_app"
                android:drawableTint="@color/green_app"
                android:layout_marginTop="20dp"/>
            <Button
                android:id="@+id/btn_desafio_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DESAFíO 7"
                android:textSize="27sp"
                android:paddingVertical="15dp"
                android:drawableRight="@drawable/desafio7"
                android:backgroundTint="@color/beige_app"
                android:textColor="@color/green_app"
                android:drawableTint="@color/green_app"
                android:layout_marginTop="20dp"/>
            <Button
                android:id="@+id/btn_desafio_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DESAFíO 8"
                android:textSize="27sp"
                android:paddingVertical="15dp"
                android:drawableRight="@drawable/desafio8"
                android:backgroundTint="@color/beige_app"
                android:textColor="@color/green_app"
                android:drawableTint="@color/green_app"
                android:layout_marginTop="20dp"/>
            <Button
                android:id="@+id/btn_desafio_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DESAFíO 9"
                android:textSize="27sp"
                android:paddingVertical="15dp"
                android:drawableRight="@drawable/desafio9"
                android:backgroundTint="@color/beige_app"
                android:textColor="@color/green_app"
                android:drawableTint="@color/green_app"
                android:layout_marginTop="20dp"/>
            <Button
                android:id="@+id/btn_desafio_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DESAFíO 10"
                android:textSize="27sp"
                android:paddingVertical="15dp"
                android:drawableRight="@drawable/desafio10"
                android:backgroundTint="@color/beige_app"
                android:textColor="@color/green_app"
                android:drawableTint="@color/green_app"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                />


        </LinearLayout>
    </ScrollView>

</LinearLayout>