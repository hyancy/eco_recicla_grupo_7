<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_app"
    tools:context=".FormularioRegistroResiduo">


    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/background_pantalla_registro_residuos" />


        <ImageView
            android:id="@+id/logo_categorias"
            android:layout_width="116dp"
            android:layout_height="115dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="116dp"
            android:src="@drawable/ic_logo_app" />


        <TextView
            android:id="@+id/title_eco_recicla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="24dp"
            android:fontFamily="sans-serif-black"
            android:paddingVertical="6dp"
            android:text="Registro de\nresiduos"
            android:textAlignment="center"
            android:textColor="@color/green_app"
            android:textSize="32sp" />

        <ImageView
            android:id="@+id/menu_hamburguesa_categorias"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_gravity="end"
            android:layout_margin="8dp"
            android:src="@drawable/ic_menu_hamburguesa" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="502dp"
            android:layout_marginTop="230dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="22dp"
                        android:text="Descripción"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="120dp"
                        android:text="Foto"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="22dp">

                    <ScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="194dp"
                                android:layout_height="140dp">

                                <EditText
                                    android:layout_width="194dp"
                                    android:layout_height="140dp" />

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#CC609E58" />
                            </FrameLayout>


                        </LinearLayout>

                    </ScrollView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="128dp"
                            android:layout_height="100dp"
                            android:background="@color/black" />

                        <ImageView
                            android:layout_width="128dp"
                            android:layout_height="40dp"
                            android:background="#00E8E3CA"
                            android:clickable="true"
                            android:src="@drawable/ic_camara_foto" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingEnd="22dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="22dp"
                        android:layout_marginTop="28dp"
                        android:text="Fecha"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <FrameLayout
                        android:layout_width="282dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="14dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#CC609E58" />

                        <EditText
                            android:layout_width="238dp"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:hint="DD | MM | AAAA"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="24sp" />

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_gravity="end"
                            android:background="#CC609E58"
                            android:clickable="true"
                            android:src="@drawable/ic_calendario" />


                    </FrameLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingEnd="22dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="22dp"
                        android:layout_marginTop="28dp"
                        android:text="Lugar"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <FrameLayout
                        android:layout_width="283dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="14dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#CC609E58" />

                        <EditText
                            android:layout_width="238dp"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:hint="Seleccione ubicación"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_gravity="end"
                            android:layout_marginTop="4dp"
                            android:background="#CC609E58"
                            android:clickable="true"
                            android:src="@drawable/ic_localizacion" />


                    </FrameLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingEnd="22dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="22dp"
                        android:layout_marginTop="28dp"
                        android:text="Categoría"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <FrameLayout
                        android:layout_width="252dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="14dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#CC609E58" />


                        <Spinner
                            android:layout_width="252dp"
                            android:layout_height="wrap_content"
                            android:textAlignment="center" />


                    </FrameLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingEnd="22dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="22dp"
                        android:layout_marginTop="16dp"
                        android:text="Cantidad\n(Kg/Ltr/Uds)"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <FrameLayout
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="14dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="50dp"
                            android:background="#CC609E58" />


                        <EditText
                            android:layout_width="80dp"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:hint="0"
                            android:textColor="@color/white"
                            android:textSize="28dp"
                            android:textStyle="bold" />


                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="22dp"
                        android:layout_marginTop="16dp"
                        android:text="Puntos\n(pts)"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <FrameLayout
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="14dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="50dp"
                            android:background="#CC609E58" />


                        <EditText
                            android:layout_width="80dp"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:hint="0"
                            android:textColor="@color/white"
                            android:textSize="28dp"
                            android:textStyle="bold" />


                    </FrameLayout>


                </LinearLayout>

                <Button
                    android:id="@+id/btn_registrar_residuo"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:backgroundTint="@color/beige_app"
                    android:text="Registrar"
                    android:textColor="@color/green_app"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="80dp" />
            </LinearLayout>
        </ScrollView>


        <View
            android:id="@+id/background_welcome_home_home"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="666dp"
            android:background="@color/green_app" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="672dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/categorias_menu_bottom_bar"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="16dp"
                android:clickable="true"
                android:src="@drawable/ic_categorias_menu_bottom_bar"
                app:tint="#1A681D" />

            <ImageView
                android:id="@+id/estadisticas_menu_bottom_bar"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="8dp"
                android:clickable="true"
                android:src="@drawable/ic_statistics_menu_bottom_bar"
                app:tint="#1A681D" />

            <ImageView
                android:id="@+id/consejos_menu_bottom_bar"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="16dp"
                android:clickable="true"
                android:src="@drawable/ic_consejos_menu_bottom_bar"
                app:tint="#1A681D" />

            <ImageView
                android:id="@+id/info_app_menu_bottom_bar"
                android:layout_width="53dp"
                android:layout_height="53dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="6dp"
                android:background="#801A681D"
                android:clickable="true"
                android:src="@drawable/ic_info_app_menu_bottom_bar" />

            <ImageView
                android:id="@+id/logout_menu_bottom_bar"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:src="@drawable/ic_logout_menu_bottom_bar" />

        </LinearLayout>

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>