<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Statistic">


    <FrameLayout
        android:id="@+id/frameLY_top_statistics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top">

        <View
            android:id="@+id/view_background_top_clean_points"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_gravity="top"
            android:background="@color/green_app" />

        <TextView
            android:id="@+id/textV_title_eco_recicla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="100dp"
            android:fontFamily="sans-serif-black"
            android:paddingVertical="6dp"
            android:text="@string/title_estatistics"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/menu_hamburguesa_estadisticas"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_gravity="end"
            android:layout_margin="8dp"
            android:src="@drawable/ic_menu_hamburguesa" />

        <ImageView
            android:id="@+id/ImageV_logo_statistics"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="top|start"
            android:layout_marginStart="23dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/ic_logo_app" />

        <TextView
            android:id="@+id/label_textV_accumulate_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="138dp"
            android:fontFamily="sans-serif-black"
            android:text="@string/label_accumulate_points"
            android:textAlignment="textStart"
            android:textAllCaps="true"
            android:textColor="@color/beige_app"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textV_accumulate_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="250dp"
            android:layout_marginTop="122dp"
            android:background="@color/beige_app"
            android:fontFamily="sans-serif-black"
            android:padding="4dp"
            android:text="@string/accumulate_points"
            android:textAlignment="textStart"
            android:textAllCaps="true"
            android:textColor="@color/green_app"
            android:textSize="32sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="565dp"
                android:columnCount="1"
                android:paddingHorizontal="22dp"
                android:rowCount="7">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-black"
                        android:text="@string/textV_title_card"
                        android:textAlignment="center"
                        android:textColor="@color/green_app"
                        android:textSize="18sp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="344dp"
                        android:layout_height="162dp"
                        android:backgroundTint="#80E8E3CA"
                        app:cardCornerRadius="16dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="155dp"
                            android:layout_marginTop="4dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/imagen_grafica_promedio_por_categoria_estadisticas" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="162dp"
                                android:background="#33E8E3CA" />

                        </FrameLayout>


                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-black"
                        android:text="@string/textV_title_card_2"
                        android:textAlignment="center"
                        android:textColor="@color/green_app"
                        android:textSize="18sp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="344dp"
                        android:layout_height="162dp"
                        android:backgroundTint="#80E8E3CA"
                        app:cardCornerRadius="16dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="155dp"
                            android:layout_marginTop="4dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/imagen_grafica_reciclaje_por_linea_temporal_estadisticas" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="162dp"
                                android:background="#33E8E3CA" />

                        </FrameLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-black"
                        android:text="@string/textV_title_card_3"
                        android:textAlignment="center"
                        android:textColor="@color/green_app"
                        android:textSize="18sp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="344dp"
                        android:layout_height="162dp"
                        android:backgroundTint="#80E8E3CA"
                        app:cardCornerRadius="16dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="155dp"
                            android:layout_marginTop="5dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/imagen_grafica_puntos_por_linea_temporal_estadisticas" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="162dp"
                                android:background="#33E8E3CA" />

                        </FrameLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-black"
                        android:text="@string/textV_title_card_4"
                        android:textAlignment="center"
                        android:textColor="@color/green_app"
                        android:textSize="18sp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="344dp"
                        android:layout_height="162dp"
                        android:backgroundTint="#80E8E3CA"
                        app:cardCornerRadius="16dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="155dp"
                            android:layout_marginTop="5dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/imagen_grafica_promedio_por_categoria_estadisticas" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="162dp"
                                android:background="#33E8E3CA" />

                        </FrameLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_row="4"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-black"
                        android:text="@string/textV_title_card_5"
                        android:textAlignment="center"
                        android:textColor="@color/green_app"
                        android:textSize="18sp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="344dp"
                        android:layout_height="162dp"
                        android:backgroundTint="#80E8E3CA"
                        app:cardCornerRadius="16dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="155dp"
                            android:layout_marginTop="5dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/imagen_grafica_reciclaje_por_linea_temporal_semana_estadisticas" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="162dp"
                                android:background="#33E8E3CA" />

                        </FrameLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_row="5"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-black"
                        android:text="@string/textV_title_card_6"
                        android:textAlignment="center"
                        android:textColor="@color/green_app"
                        android:textSize="18sp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="344dp"
                        android:layout_height="162dp"
                        android:backgroundTint="#80E8E3CA"
                        app:cardCornerRadius="16dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="155dp"
                            android:layout_marginTop="5dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/imagen_grafica_puntos_por_linea_temporal_mes_estadisticas" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="162dp"
                                android:background="#33E8E3CA" />

                        </FrameLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_row="6"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-black"
                        android:text="@string/textV_title_card_7"
                        android:textAlignment="center"
                        android:textColor="@color/green_app"
                        android:textSize="18sp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="344dp"
                        android:layout_height="162dp"
                        android:backgroundTint="#80E8E3CA"
                        android:layout_marginBottom="90dp"
                        app:cardCornerRadius="16dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="155dp"
                            android:layout_marginTop="5dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/imagen_grafica_puntos_por_linea_temporal_semana_estadisticas" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="162dp"
                                android:background="#33E8E3CA" />

                        </FrameLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>

            </GridLayout>
        </ScrollView>



        <View
            android:id="@+id/background_welcome_home_home"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="666dp"
            android:background="@color/green_app" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="668dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/home_menu_bottom_bar"
                android:layout_width="53dp"
                android:layout_height="53dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:clickable="true"
                app:tint="@color/white"
                android:src="@drawable/ic_home_app_menu_bottom_bar" />

            <ImageView
                android:id="@+id/categorias_menu_bottom_bar"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="16dp"
                android:clickable="true"
                android:src="@drawable/ic_categorias_menu_bottom_bar"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/estadisticas_menu_bottom_bar"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="16dp"
                android:clickable="true"
                android:src="@drawable/ic_statistics_menu_bottom_bar"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/consejos_menu_bottom_bar"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="16dp"
                android:clickable="true"
                android:src="@drawable/ic_consejos_menu_bottom_bar"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/logout_menu_bottom_bar"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:src="@drawable/ic_logout_menu_bottom_bar" />

        </LinearLayout>


    </FrameLayout>


</RelativeLayout>