<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:backgroundTint="@color/beige_app"
    app:cardCornerRadius="16dp">



    <LinearLayout
        android:paddingHorizontal="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="26dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Recordar Contraseña"
            android:textColor="@color/green_app"
            android:textSize="28sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="18dp"
            android:background="@color/white"
            android:gravity="center"
            android:paddingHorizontal="2dp"
            android:textColorHint="@color/green_app">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/user_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/user"
                android:inputType="textEmailAddress"
                android:textSize="20sp"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:paddingHorizontal="2dp"
            android:paddingBottom="2dp"
            android:textColorHint="@color/green_app">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_email_user_register"
                android:inputType="textPassword"
                android:textSize="20sp"
                android:textStyle="bold" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:layout_marginTop="18dp"
            android:layout_width="280dp"
            android:text="Enviar Contraseña"
            android:textSize="20sp"
            android:backgroundTint="@color/green_app"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Cerrar"
            android:textColor="@color/green_app"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>





</androidx.cardview.widget.CardView>


